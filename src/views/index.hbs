<main>
   <!--? FORM PRODUCTOS -->

    <form class="form" id="products-form" action="api/productos" method="post">
      <h2 class="form-title">Ingresar productos</h2>
      <p class="form-paragraph">
        GITHUB
        <a
          href="https://github.com/felipepardo90/new-Backend.git"
          target="_blank"
          class="form-link"
          >Ver repo</a
        >
      </p>
      <div class="form-container">
        <div class="form-group">
          <input
            type="text"
            name="title"
            id="title"
            class="form-input"
            placeholder=" "
            
          />
          <label for="title" class="form-label">Title:</label>
          <span class="form-line"></span>
        </div>
        <div class="form-group">
          <input
            type="number"
            name="price"
            id="price"
            class="form-input"
            placeholder=" "
            
          />
          <label for="price" class="form-label">Price:</label>
          <span class="form-line"></span>
        </div>
        <div class="form-group">
          <input
            type="text"
            name="thumbnail"
            id="thumbnail"
            class="form-input"
            placeholder=" "
            
          />
          <label for="thumbnail" class="form-label">Thumbnail:</label>
          <span class="form-line"></span>
        </div>
        <div class="form-group">
          <input
            type="text"
            name="code"
            id="code"
            class="form-input"
            placeholder=" "
            maxlength="4"
            
          />
          <label for="code" class="form-label">Code:</label>
          <span class="form-line"></span>
        </div>
        <div class="form-group">
          <input
            type="number"
            name="stock"
            id="stock"
            class="form-input"
            placeholder=" "
            
          />
          <label for="stock" class="form-label">Stock:</label>
          <span class="form-line"></span>
        </div>
        <div class="form-group">
          <textarea
            type="text"
            name="description"
            id="description"
            class="form-input"
            placeholder=" "
            
          /></textarea>
          <label for="description" class="form-label">Description:</label>
          <span class="form-line"></span>
        </div>

        <input type="submit" class="form-submit" value="Ingresar" />
      </div>
    </form>
</main>



