        <% if(cart===null || cart.products.length==0) { %>
          <div>
            <h1 style="color:white">Tu carrito está vacío</h1>
          </div>
          <% } else { %>
            <table width="60%">
              <thead>
                <tr>
                  <td>Nombre</td>
                  <td>Precio</td>
                  <td>Producto</td>
                  <td>Cantidad</td>
                  <td>Ver</td>
                  <td>Quitar Producto</td>
                </tr>
              </thead>
              <tbody>
                <% cart.products.forEach((item)=>{ %>
                  <tr key="<%= item.id %>">
                    <td>
                      <%= item.title %>
                    </td>
                    <td>$AR <%= item.price %>
                    </td>
                    <td>
                      <img alt="<%= item.title %>" src="<%= item.thumbnail %>" width="40px" height="40px" />
                    </td>
                    <td style="display:inline-block; background-color:yellow">
                      <div>
                        <form action="/cart/641464e5acf866b22f960684/products" method="POST">
                          <input type="hidden" name="_id" value="<%= item._id %>">
                          <button type="submit" class="btn btn-primary">+</button>
                        </form>
                        <h3>
                          <%= item.quantity %>
                        </h3>
                        <form action="/cart/641464e5acf866b22f960684/products/<%-item._id%>?_method=DELETE"
                          method="POST">
                          <button type="submit" class="btn btn-secondary">-</button>
                        </form>
                      </div>
                    </td>
                    <td>
                      <a href="/products/<%- item._id %>">Ver</a>
                    </td>
                    <td>
                      <form action="/cart/641464e5acf866b22f960684/products?_method=DELETE" method="POST">
                        <input type="hidden" name="_id" value="<%= item._id %>">
                        <button type="submit" class="btn btn-primary">-</button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
            <h1>
              Subtotal: <%= cart.subtotal %>
            </h1>
            <% } %>
      </div>
    </main>

    </html>